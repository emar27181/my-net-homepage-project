  { href: '/link', label: 'LINK', icon: 'ğŸ”—' }
];
---

<NeonLine lineId="primary" type="frame" size="md">
  <nav>
    <table class="retro-table w-full">
      <tr>
        {navItems.map(item => (
          <td class="text-center">
            <NeonLine 
              lineId="primary" 
              type="border" 
              size="sm" 
              class={`neon-nav-item ${currentPath === item.href ? 'active' : ''}`}
            >
              <a 
                href={item.href} 
                class="neon-nav-link"
              >
                {item.icon} {item.label}
              </a>
            </NeonLine>
          </td>
        ))}
      </tr>
    </table>
  </nav>
</NeonLine>

<style>
  .neon-nav-item {
    margin: 0.25rem;
    transition: all 0.3s ease;
  }

  .neon-nav-item.active {
    filter: brightness(1.3);
    transform: scale(1.05);
  }

  .neon-nav-link {
    display: block;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: var(--neon-line-primary-color);
    font-weight: bold;
    font-size: 0.9rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .neon-nav-link:hover {
    color: #ffffff;
    text-shadow: 0 0 10px var(--neon-line-primary-color);
    transform: scale(1.02);
  }

  /* ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ–å¯¾å¿œ */
