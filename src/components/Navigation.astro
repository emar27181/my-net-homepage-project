import NeonLine from './NeonLine.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'HOME', icon: 'ğŸ ' },
  { href: '/about', label: 'ABOUT', icon: 'ğŸ˜Š' },
  { href: '/gallery', label: 'GALLERY', icon: 'ğŸ¨' },
  { href: '/game', label: 'GAME', icon: 'ğŸ®' },
  { href: '/dev', label: 'DEV', icon: 'ğŸ’¾' },
