---
// プロフィール情報の一元管理コンポーネント

// 基本プレイヤー情報（RPG風）
const profileData = {
  netName: "Player: nodoame（のどあめ）",
  age: "Lv.20 大学生（20代前半）",
  major: "Job: Programmer/Artist",
  location: "Location: 日本のどこか 🏠",
  favoriteColors: "Favorite: ピンク、水色、8-bitカラー",
  motto: '"継続は力なり" & "好きこそものの上手なれ"',
  hobbies: "Skills: ゲーム・イラスト・Web制作",
  favorites: "Items: 猫・レトロ・ドット絵"
};

// 表示タイプの定義
export interface Props {
  type?: 'full' | 'basic' | 'mini';
  showLabels?: boolean;
  className?: string;
}

const { 
  type = 'full',
  showLabels = true,
  className = ''
} = Astro.props;
---

{type === 'full' && (
  <table class={`profile-table ${className}`}>
    <tr>
      <td class="profile-label">◆ Player Name ◆</td>
      <td class="profile-value">{profileData.netName}</td>
    </tr>
    <tr>
      <td class="profile-label">◆ Level/Age ◆</td>
      <td class="profile-value">{profileData.age}</td>
    </tr>
    <tr>
      <td class="profile-label">◆ Job Class ◆</td>
      <td class="profile-value">{profileData.major}</td>
    </tr>
    <tr>
      <td class="profile-label">◆ Home Base ◆</td>
      <td class="profile-value">{profileData.location}</td>
    </tr>
    <tr>
      <td class="profile-label">◆ Favorites ◆</td>
      <td class="profile-value">{profileData.favoriteColors}</td>
    </tr>
    <tr>
      <td class="profile-label">◆ Motto ◆</td>
      <td class="profile-value">{profileData.motto}</td>
    </tr>
  </table>
)}

{type === 'basic' && (
  <div class={`profile-section ${className}`}>
    <p style="font-size: 12px; padding: 8px;">
      {showLabels && (
        <>
          <strong>◆ Player:</strong> {profileData.netName}<br/>
          <strong>◆ Level:</strong> {profileData.age}<br/>
          <strong>◆ Skills:</strong> {profileData.hobbies}<br/>
          <strong>◆ Items:</strong> {profileData.favorites}
        </>
      )}
      {!showLabels && (
        <>{profileData.netName} | {profileData.age}</>
      )}
    </p>
  </div>
)}

{type === 'mini' && (
  <span class={className}>
    {profileData.netName}
  </span>
)}