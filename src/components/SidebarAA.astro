---
import AsciiEmoji from './AsciiEmoji.astro';

export interface Props {
  side: 'left' | 'right';
}

const { side } = Astro.props;

// 左右で異なるAAを表示
const leftContent = [
  { type: 'cat-aa', variant: 'giko', size: 'sm' },
  { type: 'emoticon', variant: 'smile', size: 'md' },
  { type: 'simple-aa', variant: 'kusa', size: 'sm' },
  { type: 'emoticon', variant: 'happy', size: 'md' },
  { type: 'cat-aa', variant: 'small_cat', size: 'sm' },
  { type: 'simple-aa', variant: 'gj', size: 'sm' }
];

const rightContent = [
  { type: 'cat-aa', variant: 'shii', size: 'sm' },
  { type: 'emoticon', variant: 'shobon', size: 'md' },
  { type: 'simple-aa', variant: 'otsu', size: 'sm' },
  { type: 'emoticon', variant: 'cool', size: 'md' },
  { type: 'cat-aa', variant: 'mini_cat', size: 'md' },
  { type: 'simple-aa', variant: 'ktkr', size: 'sm' }
];

const content = side === 'left' ? leftContent : rightContent;
---

<div class={`sidebar-aa sidebar-${side}`}>
  {content.map((item, index) => (
    <div class="aa-item" style={`animation-delay: ${index * 0.5}s`}>
      <AsciiEmoji 
        type={item.type as any} 
        variant={item.variant} 
        size={item.size as any} 
      />
    </div>
  ))}
</div>

<style>
  .sidebar-aa {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    z-index: 10;
    pointer-events: auto;
    background: linear-gradient(180deg, 
      rgba(77, 121, 255, 0.1) 0%, 
      rgba(128, 0, 255, 0.1) 50%, 
      rgba(77, 121, 255, 0.1) 100%);
    border: 2px solid var(--retro-primary);
    border-radius: 8px;
    padding: 1rem 0.5rem;
    box-shadow: 
      inset 2px 2px 0px rgba(255,255,255,0.3), 
      inset -2px -2px 0px rgba(0,0,0,0.5),
      0 0 20px rgba(77, 121, 255, 0.3);
    backdrop-filter: blur(5px);
  }

  .sidebar-left {
    left: 0.5rem;
    border-left: 4px solid var(--retro-secondary);
    border-top-left-radius: 12px;
    border-bottom-left-radius: 12px;
  }

  .sidebar-right {
    right: 0.5rem;
    border-right: 4px solid var(--retro-secondary);
    border-top-right-radius: 12px;
    border-bottom-right-radius: 12px;
  }

  .aa-item {
    opacity: 0.8;
    animation: float 4s ease-in-out infinite, glow-pulse 3s ease-in-out infinite;
    transition: all 0.3s ease;
    background: rgba(77, 121, 255, 0.1);
    border: 1px solid var(--retro-primary);
    border-radius: 4px;
    padding: 0.25rem;
    box-shadow: inset 1px 1px 0px rgba(255,255,255,0.3), inset -1px -1px 0px rgba(0,0,0,0.5);
  }

  .aa-item:hover {
    opacity: 1;
    background: rgba(128, 0, 255, 0.2);
    border-color: var(--retro-secondary);
    transform: scale(1.1);
    box-shadow: 
      inset 1px 1px 0px rgba(255,255,255,0.4), 
      inset -1px -1px 0px rgba(0,0,0,0.6),
      0 0 15px var(--retro-primary);
    filter: brightness(1.3);
  }

  /* 8-bit風フローティングアニメーション */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-8px) rotate(1deg);
    }
    50% {
      transform: translateY(-15px) rotate(0deg);
    }
    75% {
      transform: translateY(-8px) rotate(-1deg);
    }
  }

  /* ネオングロー効果 */
  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: 
        inset 1px 1px 0px rgba(255,255,255,0.3), 
        inset -1px -1px 0px rgba(0,0,0,0.5),
        0 0 5px var(--retro-primary);
    }
    50% {
      box-shadow: 
        inset 1px 1px 0px rgba(255,255,255,0.4), 
        inset -1px -1px 0px rgba(0,0,0,0.6),
        0 0 15px var(--retro-secondary);
    }
  }

  /* サイドバー全体のグロー効果 */
  .sidebar-aa::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(180deg, 
      var(--retro-primary) 0%, 
      var(--retro-secondary) 50%, 
      var(--retro-primary) 100%);
    border-radius: 10px;
    z-index: -1;
    opacity: 0.3;
    animation: border-glow 2s ease-in-out infinite alternate;
  }

  @keyframes border-glow {
    from {
      opacity: 0.3;
    }
    to {
      opacity: 0.7;
    }
  }

  /* デスクトップでのみ表示 */
  @media (max-width: 1200px) {
    .sidebar-aa {
      display: none;
    }
  }

  /* アクセシビリティ対応 */
  @media (prefers-reduced-motion: reduce) {
    .aa-item {
      animation: none !important;
    }
    
    .sidebar-aa::before {
      animation: none !important;
    }
    
    .aa-item:hover {
      transform: none !important;
    }
  }

  /* 高コントラスト対応 */
  @media (prefers-contrast: high) {
    .sidebar-aa {
      border-width: 3px;
      border-color: #ffffff;
      background: rgba(0, 0, 0, 0.8);
    }
    
    .aa-item {
      border-width: 2px;
      border-color: #ffffff;
      background: rgba(0, 0, 0, 0.6);
    }
  }

  /* 大画面での調整 */
  @media (min-width: 1400px) {
    .sidebar-left {
      left: 1rem;
    }
    
    .sidebar-right {
      right: 1rem;
    }
    
    .sidebar-aa {
      gap: 2.5rem;
      padding: 1.5rem 0.75rem;
    }
  }

  /* 超大画面での調整 */
  @media (min-width: 1600px) {
    .sidebar-left {
      left: 1.5rem;
    }
    
    .sidebar-right {
      right: 1.5rem;
    }
    
    .sidebar-aa {
      gap: 3rem;
      padding: 2rem 1rem;
    }
  }
</style>