---
import { applyTypographyPreset } from '../utils/typography';
import '../styles/global.css';
import Dekome from '../components/Dekome.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "nodoameのレトロなポートフォリオサイト" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="keywords" content="nodoame,ポートフォリオ,レトロ,VALORANT,イラスト,ドット絵,Web制作" />
    <meta name="author" content="nodoame" />
    
    <!-- レトロな雰囲気のためのメタタグ -->
    <meta name="generator" content="Astro v4.x" />
    
    <!-- カスタムスタイル -->
    <style>
      
      /* HTMLファイルでmarqueeタグを使用するためのポリフィル */
      marquee {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        animation: marquee 15s linear infinite;
      }
      
      @keyframes marquee {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
      }
    </style>
  </head>
  <body class="scanlines crt-effect">
    <!-- ネオ東京風メインコンテナ -->
    <div class="min-h-screen max-w-4xl mx-auto border-4 md:border-4 border-2" style="background: var(--dark-bg-secondary); border-color: var(--neon-primary); border-style: solid; box-shadow: 0 0 30px rgba(77, 121, 255, 0.3);">
      
      <!-- ネオンヘッダー -->
      <header class="retro-frame" style="background: var(--gradient-cyber); border-color: var(--neon-tertiary);">
        <h1 class={`${applyTypographyPreset('cyberTitle')} neon-glow`} style="text-align: center;">
          <Dekome type="star-shooting" size="md" /> nodoame's Cyber Space <Dekome type="crown-princess" size="md" />
        </h1>
        <p class={applyTypographyPreset('subText')} style="text-align: center; margin-top: 8px;">
          <Dekome type="sparkle-rainbow" size="sm" /> Welcome to Neo Tokyo Web <Dekome type="heart-rainbow" size="sm" />
        </p>
      </header>

      <!-- サイバーナビゲーション -->
      <nav class="retro-frame" style="background: var(--dark-bg-tertiary); border-color: var(--neon-violet);">
        <!-- デスクトップ表示 -->
        <div class="hidden md:block">
          <table class="retro-table w-full">
            <tr>
              <td class="text-center">
                <a href="/" class="retro-button"><Dekome type="heart-pink" size="xs" /> HOME</a>
              </td>
              <td class="text-center">
                <a href="/about" class="retro-button"><Dekome type="face-happy" size="xs" /> ABOUT</a>
              </td>
              <td class="text-center">
                <a href="/gallery" class="retro-button"><Dekome type="butterfly" size="xs" /> GALLERY</a>
              </td>
              <td class="text-center">
                <a href="/game" class="retro-button"><Dekome type="game-controller" size="xs" /> GAME</a>
              </td>
              <td class="text-center">
                <a href="/dev" class="retro-button"><Dekome type="computer" size="xs" /> DEV</a>
              </td>
              <td class="text-center">
                <a href="/blog" class="retro-button"><Dekome type="music-note" size="xs" /> BLOG</a>
              </td>
              <td class="text-center">
                <a href="/link" class="retro-button"><Dekome type="star-twinkle" size="xs" /> LINK</a>
              </td>
            </tr>
          </table>
        </div>
        
        <!-- モバイル表示 -->
        <div class="md:hidden">
          <div class="grid grid-cols-2 gap-2 p-2">
            <a href="/" class="retro-button text-center block"><Dekome type="heart-pink" size="xs" /> HOME</a>
            <a href="/about" class="retro-button text-center block"><Dekome type="face-happy" size="xs" /> ABOUT</a>
            <a href="/gallery" class="retro-button text-center block"><Dekome type="butterfly" size="xs" /> GALLERY</a>
            <a href="/game" class="retro-button text-center block"><Dekome type="game-controller" size="xs" /> GAME</a>
            <a href="/dev" class="retro-button text-center block"><Dekome type="computer" size="xs" /> DEV</a>
            <a href="/blog" class="retro-button text-center block"><Dekome type="music-note" size="xs" /> BLOG</a>
          </div>
          <div class="px-2 pb-2">
            <a href="/link" class="retro-button text-center block w-full"><Dekome type="star-twinkle" size="xs" /> LINK</a>
          </div>
        </div>
      </nav>

      <!-- メインコンテンツエリア -->
      <main class="p-4">
        <slot />
      </main>

      <!-- サイバーフッター -->
      <footer class="retro-frame text-center mt-8" style="background: var(--dark-bg-tertiary); border-color: var(--neon-secondary);">
        <p class={applyTypographyPreset('caption')}>
          <Dekome type="sparkle-gold" size="xs" /> Created by nodoame | Powered by Astro + Tailwind CSS <Dekome type="coffee-steam" size="xs" />
        </p>
        <p class={applyTypographyPreset('timestamp')} style="margin-top: 4px;">
          <span><Dekome type="clock" size="xs" /> System Time: {new Date().toLocaleDateString('ja-JP')}</span>
        </p>
        <div class="flex justify-center items-center gap-2 mt-2">
          <img src="https://via.placeholder.com/31x15/4D79FF/000000?text=CYBER+LOVE" alt="Made with Cyber Love" style="image-rendering: pixelated; filter: drop-shadow(0 0 3px #4d79ff);" />
          <img src="https://via.placeholder.com/80x15/4D79FF/000000?text=NEO+TOKYO" alt="Neo Tokyo Powered" style="image-rendering: pixelated; filter: drop-shadow(0 0 3px #4d79ff);" />
        </div>
      </footer>
    </div>

  </body>
</html>