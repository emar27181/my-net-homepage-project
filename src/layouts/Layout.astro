---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "nodoameのレトロなポートフォリオサイト" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="keywords" content="nodoame,ポートフォリオ,レトロ,VALORANT,イラスト,ドット絵,Web制作" />
    <meta name="author" content="nodoame" />
    
    <!-- レトロな雰囲気のためのメタタグ -->
    <meta name="generator" content="Astro v4.x" />
    
    <!-- グローバルスタイルをインポート -->
    <style>
      @import '../styles/global.css';
      
      /* HTMLファイルでmarqueeタグを使用するためのポリフィル */
      marquee {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        animation: marquee 15s linear infinite;
      }
      
      @keyframes marquee {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
      }
    </style>
  </head>
  <body class="scanlines crt-effect">
    <!-- ネオ東京風メインコンテナ -->
    <div class="min-h-screen max-w-4xl mx-auto border-4" style="background: var(--dark-bg-secondary); border-color: var(--neon-primary); border-style: solid; box-shadow: 0 0 30px rgba(77, 121, 255, 0.3);">
      
      <!-- ネオンヘッダー -->
      <header class="retro-frame" style="background: var(--gradient-cyber); border-color: var(--neon-tertiary);">
        <h1 class="neon-glow" style="font-family: var(--font-pixel); font-size: 16px; text-align: center; color: var(--neon-primary); text-shadow: 0 0 10px var(--neon-primary), 0 0 20px var(--neon-primary), 0 0 30px var(--neon-primary);">
          🌌 nodoame's Cyber Space 🌌
        </h1>
        <p style="text-align: center; font-size: 12px; margin-top: 8px; color: var(--neon-tertiary); text-shadow: 0 0 5px var(--neon-tertiary);">
          ⚡ Welcome to Neo Tokyo Web ⚡
        </p>
      </header>

      <!-- サイバーナビゲーション -->
      <nav class="retro-frame" style="background: var(--dark-bg-tertiary); border-color: var(--neon-violet);">
        <table class="retro-table w-full">
          <tr>
            <td class="text-center">
              <a href="/" class="retro-button">🏠 HOME</a>
            </td>
            <td class="text-center">
              <a href="/about" class="retro-button">🤖 ABOUT</a>
            </td>
            <td class="text-center">
              <a href="/gallery" class="retro-button">🎨 GALLERY</a>
            </td>
            <td class="text-center">
              <a href="/game" class="retro-button">🎮 GAME</a>
            </td>
            <td class="text-center">
              <a href="/dev" class="retro-button">💾 DEV</a>
            </td>
            <td class="text-center">
              <a href="/blog" class="retro-button">📡 BLOG</a>
            </td>
            <td class="text-center">
              <a href="/link" class="retro-button">🔗 LINK</a>
            </td>
          </tr>
        </table>
      </nav>

      <!-- メインコンテンツエリア -->
      <main class="p-4">
        <slot />
      </main>

      <!-- サイバーフッター -->
      <footer class="retro-frame text-center mt-8" style="background: var(--dark-bg-tertiary); border-color: var(--neon-secondary);">
        <p style="font-family: var(--font-pixel); font-size: 10px; color: var(--neon-primary); text-shadow: 0 0 5px var(--neon-primary);">
          ⚡ Created by nodoame | Powered by Astro + Tailwind CSS ⚡
        </p>
        <p style="font-size: 10px; margin-top: 4px; color: var(--neon-violet); text-shadow: 0 0 3px var(--neon-violet);">
          <span>🕒 System Time: {new Date().toLocaleDateString('ja-JP')}</span>
        </p>
        <div class="flex justify-center items-center gap-2 mt-2">
          <img src="https://via.placeholder.com/31x15/4D79FF/000000?text=CYBER+♥" alt="Made with Cyber Love" style="image-rendering: pixelated; filter: drop-shadow(0 0 3px #4d79ff);" />
          <img src="https://via.placeholder.com/80x15/4D79FF/000000?text=NEO+TOKYO" alt="Neo Tokyo Powered" style="image-rendering: pixelated; filter: drop-shadow(0 0 3px #4d79ff);" />
        </div>
      </footer>
    </div>

  </body>
</html>