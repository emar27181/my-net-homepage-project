---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import { applyTypographyPreset } from '../utils/typography';
import Dekome from '../components/Dekome.astro';
import AsciiEmoji from '../components/AsciiEmoji.astro';
import { tPageTitle } from '../utils/textManager';

// フォントサイズ設定
const FONT_SIZES = {
  title: "24px",
  subtitle: "16px", 
  sectionTitle: "18px",
  subTitle: "14px",
  bodyText: "12px",
  smallText: "10px",
  footer: "10px",
};
---

<Layout title="Works - nodoameの作品・プロジェクト">
  <!-- ページタイトル -->
  <div class="marquee mb-6">
    <AsciiEmoji type="emoticon" variant="cool" size="sm" inline />
    {tPageTitle('works')}
    <AsciiEmoji type="simple-aa" variant="gj" size="sm" inline />
    制作した作品・プロジェクトを紹介します！
    <AsciiEmoji type="emoticon" variant="happy" size="sm" inline />
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- Web開発プロジェクト -->
    <div class="retro-frame">
      <h2 class={applyTypographyPreset('sectionTitle')} style="margin-bottom: 20px; text-align: center;">
        <Dekome type="computer" size="sm" /> Web Development <Dekome type="star-twinkle" size="sm" />
      </h2>
      
      <!-- VALORANT定点動画サイト -->
      <div class="mb-6 p-4" style="background: rgba(77,121,255,0.1); border: 2px solid #4d79ff; border-radius: 8px;">
        <h3 style={`color: #4d79ff; font-size: ${FONT_SIZES.subTitle}; margin-bottom: 10px; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000;`}>
          <Dekome type="game-controller" size="xs" /> VALORANT Point Viewer
        </h3>
        
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; line-height: 1.6; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; margin-bottom: 15px;`}>
          VALORANTの各マップの定点動画をマップ上で確認できるWebサイトです。<br />
          プレイヤーがマップを理解し、戦略を練るためのツールとして制作しました。
        </div>
        
        <!-- プロジェクトスクリーンショット -->
        <div style="margin-bottom: 15px; text-align: center;">
          <img 
            src="/valo_point_viewer_screenshot.png" 
            alt="VALORANT Point Viewer スクリーンショット"
            style={`width: 100%; max-width: 400px; height: auto; border: 2px solid #4d79ff; border-radius: 8px; box-shadow: 0 4px 8px rgba(77,121,255,0.3);`}
          />
        </div>
        
        <div class="mb-4">
          <h4 style={`color: #ffffff; font-size: ${FONT_SIZES.smallText}; margin-bottom: 8px; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000;`}>
            使用技術
          </h4>
          <div class="flex flex-wrap gap-1">
            <span class="px-2 py-1 neon-border-sm" style="font-size: 9px; background: var(--color-bg-secondary); color: var(--unified-text-primary); border-color: var(--neon-primary);">HTML5</span>
            <span class="px-2 py-1 neon-border-sm" style="font-size: 9px; background: var(--color-bg-secondary); color: var(--unified-text-primary); border-color: var(--neon-primary);">CSS3</span>
            <span class="px-2 py-1 neon-border-sm" style="font-size: 9px; background: var(--color-bg-secondary); color: var(--unified-text-primary); border-color: var(--neon-primary);">JavaScript</span>
            <span class="px-2 py-1 neon-border-sm" style="font-size: 9px; background: var(--color-bg-secondary); color: var(--unified-text-primary); border-color: var(--neon-primary);">Netlify</span>
          </div>
        </div>
        
        <div class="mb-4">
          <h4 style={`color: #ffffff; font-size: ${FONT_SIZES.smallText}; margin-bottom: 8px; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000;`}>
            主な機能
          </h4>
          <ul style={`color: #cccccc; font-size: ${FONT_SIZES.smallText}; line-height: 1.4; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; list-style: none; padding-left: 0;`}>
            <li>• マップ上での定点位置表示</li>
            <li>• 各ポイントの動画再生</li>
            <li>• レスポンシブデザイン対応</li>
            <li>• 直感的なUI/UX</li>
          </ul>
        </div>
        
        <div class="text-center">
          <a 
            href="https://valorant-point-viewer.netlify.app/" 
            target="_blank"
            rel="noopener"
            style={`display: inline-block; padding: 8px 16px; background: #4d79ff; color: #ffffff; text-decoration: none; border-radius: 4px; border: 2px solid #4d79ff; font-size: ${FONT_SIZES.smallText}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; transition: all 0.3s ease;`}
            onmouseover="this.style.background='transparent'; this.style.color='#4d79ff';"
            onmouseout="this.style.background='#4d79ff'; this.style.color='#ffffff';"
          >
            <Dekome type="star-twinkle" size="xs" /> サイトを見る <Dekome type="star-twinkle" size="xs" />
          </a>
        </div>
      </div>
      
      <!-- 今後の追加プロジェクト用 -->
      <div class="p-4" style="background: rgba(128,128,128,0.1); border: 2px dashed #666666; border-radius: 8px;">
        <div style={`color: #888888; font-size: ${FONT_SIZES.bodyText}; text-align: center; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000;`}>
          <AsciiEmoji type="emoticon" variant="thinking" size="sm" /><br />
          次のプロジェクト準備中...<br />
          <AsciiEmoji type="simple-aa" variant="wktk" size="sm" />
        </div>
      </div>
    </div>
    
    <!-- イラスト・デザイン作品 -->
    <div class="retro-frame">
      <h2 class={applyTypographyPreset('sectionTitle')} style="margin-bottom: 20px; text-align: center;">
        <Dekome type="butterfly" size="sm" /> Illustration & Design <Dekome type="heart-pink" size="sm" />
      </h2>
      
      <div class="p-4" style="background: rgba(128,0,255,0.1); border: 2px solid #8000ff; border-radius: 8px;">
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; text-align: center; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; line-height: 1.6;`}>
          <AsciiEmoji type="emoticon" variant="happy" size="sm" /><br />
          イラスト・デザイン作品は<br />
          Galleryページで公開中！<br />
          <br />
          <a 
            href="/gallery"
            style="color: #8000ff; text-decoration: underline;"
          >
            Gallery → 作品を見る
          </a>
        </div>
      </div>
    </div>
    
  </div>
  
  <!-- プロジェクト統計 -->
  <div class="retro-frame mt-6">
    <h2 class={applyTypographyPreset('sectionTitle')} style="margin-bottom: 20px; text-align: center;">
      <Dekome type="sparkle-gold" size="sm" /> Project Stats <Dekome type="sparkle-gold" size="sm" />
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="text-center p-4" style="background: rgba(77,121,255,0.1); border: 2px solid #4d79ff; border-radius: 8px;">
        <div style={`color: #4d79ff; font-size: ${FONT_SIZES.subtitle}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; margin-bottom: 5px;`}>
          1+
        </div>
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.smallText}; font-family: 'DotGothic16', monospace; text-shadow: 1px 1px 0px #000000;`}>
          Web Projects
        </div>
      </div>
      
      <div class="text-center p-4" style="background: rgba(128,0,255,0.1); border: 2px solid #8000ff; border-radius: 8px;">
        <div style={`color: #8000ff; font-size: ${FONT_SIZES.subtitle}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; margin-bottom: 5px;`}>
          10+
        </div>
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.smallText}; font-family: 'DotGothic16', monospace; text-shadow: 1px 1px 0px #000000;`}>
          Illustrations
        </div>
      </div>
      
      <div class="text-center p-4" style="background: rgba(0,255,255,0.1); border: 2px solid #00ffff; border-radius: 8px;">
        <div style={`color: #00ffff; font-size: ${FONT_SIZES.subtitle}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; margin-bottom: 5px;`}>
          3+
        </div>
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.smallText}; font-family: 'DotGothic16', monospace; text-shadow: 1px 1px 0px #000000;`}>
          Tech Stack
        </div>
      </div>
      
      <div class="text-center p-4" style="background: rgba(255,105,180,0.1); border: 2px solid #ff69b4; border-radius: 8px;">
        <div style={`color: #ff69b4; font-size: ${FONT_SIZES.subtitle}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000; margin-bottom: 5px;`}>
          ∞
        </div>
        <div style={`color: #cccccc; font-size: ${FONT_SIZES.smallText}; font-family: 'DotGothic16', monospace; text-shadow: 1px 1px 0px #000000;`}>
          Ideas
        </div>
      </div>
    </div>
  </div>
  
  <!-- フッター -->
  <div class="text-center mt-8 p-4" style="border-top: 1px solid #333333;">
    <div style={`color: #666666; font-size: ${FONT_SIZES.footer}; font-family: 'Press Start 2P', monospace; text-shadow: 1px 1px 0px #000000;`}>
      <AsciiEmoji type="simple-aa" variant="arigato" size="sm" /> Thank you for viewing my works! <AsciiEmoji type="simple-aa" variant="arigato" size="sm" />
    </div>
  </div>
</Layout>