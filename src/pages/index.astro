---
import SimpleLayout from "../layouts/SimpleLayout.astro";
import YouTubeClipViewer from "../components/YouTubeClipViewer.astro";
import { applyTypographyPreset } from "../utils/typography";
import "../styles/global.css";

// フォントサイズ設定
const FONT_SIZES = {
  title: "24px", // メインタイトル
  subtitle: "16px", // サブタイトル
  sectionTitle: "18px", // セクション見出し
  subTitle: "14px", // 小見出し
  bodyText: "12px", // 本文テキスト
  smallText: "10px", // 小さいテキスト
  footer: "10px", // フッター
};
---

<SimpleLayout title="nodoame's Portfolio">
  <div
    style="max-width: 1000px; margin: 0 auto; padding: 20px; background: var(--color-bg-secondary); border: 4px solid var(--retro-primary); border-radius: 12px; box-shadow: inset 2px 2px 0px rgba(255,255,255,0.3), inset -2px -2px 0px rgba(0,0,0,0.5), 0 0 20px rgba(77,121,255,0.3); min-height: 100vh;"
    class="main-container mobile-main"
  >
    <!-- タイトル -->
    <div style="text-align: center; margin-bottom: 40px;" class="title-section">
      <h1
        style={`color: #4d79ff; font-size: ${FONT_SIZES.title}; margin-bottom: 10px; text-shadow: 2px 2px 0px #000000;`}
      >
        nodoame's Portfolio
      </h1>
      <p
        style={`color: #ffffff; font-size: ${FONT_SIZES.subtitle}; margin: 0;`}
        class={applyTypographyPreset("mainText")}
      >
        nodoame27181 のポートフォリオ
      </p>
    </div>

    <!-- プロフィール情報 -->
    <div
      style="background: rgba(77,121,255,0.1); border: 2px solid #4d79ff; padding: 20px; margin-bottom: 40px; border-radius: 8px;"
    >
      <h2
        style={`color: #4d79ff; font-size: ${FONT_SIZES.sectionTitle}; margin-bottom: 20px; text-align: center; font-family: 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000; letter-spacing: 1px;`}
      >
        ★ Player Info ★
      </h2>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
        <div>
          <h3
            style={`color: #ffffff; font-size: ${FONT_SIZES.subTitle}; margin-bottom: 10px; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            基本情報
          </h3>
          <p
            style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; line-height: 1.8; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            名前: nodoame<br />
            メインロール: コントローラー(オーメン/クローブ/アストラ) <br />
          </p>
        </div>

        <div>
          <h3
            style={`color: #ffffff; font-size: ${FONT_SIZES.subTitle}; margin-bottom: 10px; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            外部リンク
          </h3>
          <p
            style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; line-height: 1.8; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            Twitter: <a
              href="https://twitter.com/nodoame27181"
              target="_blank"
              rel="noopener"
              style="color: #4d79ff;">@nodoame27181</a
            ><br />
            Youtube: <a
              href="https://www.youtube.com/@nodoame27181"
              target="_blank"
              rel="noopener"
              style="color: #4d79ff;">@nodoame27181</a
            ><br />
          </p>
        </div>
      </div>
    </div>

    <!-- YouTube動画セクション -->
    <div
      style="background: rgba(77,121,255,0.1); border: 2px solid #4d79ff; padding: 20px; margin-bottom: 40px; border-radius: 8px;"
      class="video-section"
    >
      <h2
        style={`color: #4d79ff; font-size: ${FONT_SIZES.sectionTitle}; margin-bottom: 20px; text-align: center; font-family: 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000; letter-spacing: 1px;`}
      >
        ★ VALORANT Gameplay ★
      </h2>
      <div class="video-grid">
        <div>
          <YouTubeClipViewer
            clipUrl="https://youtu.be/ERb40ovB060"
            title="VALORANT Clip #1"
            autoplay={false}
          />
        </div>

        <div>
          <YouTubeClipViewer
            clipUrl="https://youtu.be/KTwFA1jQgFY"
            title="VALORANT Clip #2"
            autoplay={false}
          />
        </div>

        <div>
          <YouTubeClipViewer
            clipUrl="https://youtu.be/oos2PYWiRGM"
            title="VALORANT Clip #3"
            autoplay={false}
          />
        </div>

        <div>
          <YouTubeClipViewer
            clipUrl="https://www.youtube.com/watch?v=5IET-4mL9pA"
            title="VALORANT Clip #4"
            autoplay={false}
          />
        </div>
      </div>
    </div>

    <!-- デバイス情報 -->
    <div
      style="background: rgba(77,121,255,0.1); border: 2px solid #4d79ff; padding: 20px; margin-bottom: 40px; border-radius: 8px;"
    >
      <h2
        style={`color: #4d79ff; font-size: ${FONT_SIZES.sectionTitle}; margin-bottom: 20px; text-align: center; font-family: 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000; letter-spacing: 1px;`}
      >
        ◎ Setup & Settings ◎
      </h2>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
        <div>
          <h3
            style={`color: #ffffff; font-size: ${FONT_SIZES.subTitle}; margin-bottom: 10px; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            デバイス
          </h3>
          <p
            style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; line-height: 1.8; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            マウス: Logicool G Pro Wireless<br />
            キーボード: - <br />
            ヘッドセット: - <br />
            モニター: 144Hz 24インチ
          </p>
        </div>

        <div>
          <h3
            style={`color: #ffffff; font-size: ${FONT_SIZES.subTitle}; margin-bottom: 10px; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            ゲーム設定
          </h3>
          <p
            style={`color: #cccccc; font-size: ${FONT_SIZES.bodyText}; line-height: 1.8; font-family: 'DotGothic16', 'BIZ UDPGothic', 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
          >
            感度: 0.20 (800 DPI)<br />
            クロスヘア: 青色・アウトライン有<br />
            解像度: 1920×1080<br />
            FPS: 144fps
          </p>
        </div>
      </div>
    </div>

    <!-- フッター -->
    <div
      style="text-align: center; padding: 20px 0; border-top: 1px solid #333333;"
    >
      <p
        style={`color: #666666; font-size: ${FONT_SIZES.footer}; margin: 0; font-family: 'Press Start 2P', monospace; image-rendering: pixelated; text-shadow: 1px 1px 0px #000000;`}
      >
        © 2024 nodoame's Portfolio - Made with passion for gaming
      </p>
    </div>
  </div>
</SimpleLayout>

<style>
  /* 動画グリッドのレスポンシブ対応 */
  .video-grid {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 20px !important;
    width: 100% !important;
  }

  /* タブレット表示 */
  @media screen and (max-width: 768px) {
    .video-grid {
      grid-template-columns: 1fr !important;
      gap: 20px !important;
    }
  }

  /* スマホ表示 */
  @media screen and (max-width: 480px) {
    .video-grid {
      grid-template-columns: 1fr !important;
      gap: 10px !important;
    }
  }
</style>
